{
  "name": "turtlesystemx",
  "productName": "Turtle System X",
  "version": "1.0.0",
  "description": "A cross platform version of the Oxford Turtle System",
  "author": "Amyas Merivale",
  "license": "MIT",
  "main": "src/main.js",
  "scripts": {
    "build-css": "node-sass src/styles/tsx.scss -o dist/css --output-style compressed",
    "watch-css": "node-sass src/styles/tsx.scss -wo dist/css --output-style compressed",
    "build-browser": "webpack --config webpack.browser.js --mode production",
    "build-electron": "webpack --config webpack.electron.js --mode production && electron-builder --windows",
    "dev-browser": "webpack-dev-server --config webpack.browser.js --mode development --open",
    "dev-electron": "concurrently --kill-others \"webpack-dev-server --config webpack.electron.js --mode development\" \"electron .\""
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "electron": "^3.0.2",
    "node-sass": "^4.9.3",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "repository": {
    "type": "git",
    "url": "github.com/oxfordturtle/turtlesystemx"
  },
  "keywords": [
    "turtle",
    "programming",
    "education"
  ],
  "dependencies": {
    "npm": "^6.4.1"
  }
}
