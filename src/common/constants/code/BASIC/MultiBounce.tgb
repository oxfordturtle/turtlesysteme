REM MultiBounce

DIM x%(10)
DIM y%(10)
DIM xvel%(10)
DIM yvel%(10)
DIM size%(10)
DIM colr%(10)
MINSIZE% = 70
MAXSIZE% = 130
BALLS% = 10
FOR n% = 1 TO BALLS%
  size%(n%) = MINSIZE% + RND(MAXSIZE% - MINSIZE%)
  colr%(n%) = RGB(n%)
  x%(n%) = RND(1000 - 2 * size%(n%)) + size%(n%)
  y%(n%) = RND(1000 - 2 * size%(n%)) + size%(n%)
  xvel%(n%) = RND(15) - 7
  yvel%(n%) = RND(15) - 7
NEXT
REPEAT
  NOUPDATE
  BLANK(WHITE)
  FOR n% = 1 TO BALLS%
    x%(n%) = x%(n%) + xvel%(n%)
    y%(n%) = y%(n%) + yvel%(n%)
    SETXY(x%(n%), y%(n%))
    COLOUR(colr%(n%))
    BLOT(size%(n%))
    IF (x%(n%) < size%(n%)) OR (x%(n%) > 1000 - size%(n%)) THEN
      xvel%(n%) = -xvel%(n%)
    ENDIF
    IF (y%(n%) < size%(n%)) OR (y%(n%) > 1000 - size%(n%)) THEN
      yvel%(n%) = -yvel%(n%)
    ENDIF
  NEXT
  UPDATE
  PAUSE(5)
UNTIL 1 = 0
END
