REM SimpleDraw

PROCpalette
HOME
THICKNESS(10)
BLOT(2)
REPEAT
  REPEAT
    UPDATE
  UNTIL (?LMOUSE > 0) OR (?RMOUSE > 0)
  IF ?MOUSEY > 900 THEN
    COLOUR(RGB(?MOUSEX DIV 100 + 1))
  ELSE
    IF ?LMOUSE > 0 THEN
      DRAWXY(?MOUSEX - turtx%, ?MOUSEY - turty%)
    ELSE
      SETXY(?MOUSEX, ?MOUSEY)
    ENDIF
  ENDIF
UNTIL FALSE
END

DEF PROCpalette
  LOCAL col%
  FOR col% = 1 TO 10
    SETXY(col% * 100 - 50, 950)
    COLOUR(RGB(col%))
    BLOT(50)
  NEXT
ENDPROC
