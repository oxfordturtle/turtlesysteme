# Polygons

def poly(points: int, col: int):
  direction(90)
  for count in range(0, points, 1):
    forward(600 // points)
    left(360 // points)
  colour(col)
  polygon(points)
  colour(black)
  polyline(points + 1)

penup()
thickness(4)
setxy(100, 400)
poly(3, blue)
setxy(400, 400)
poly(4, red)
setxy(700, 400)
