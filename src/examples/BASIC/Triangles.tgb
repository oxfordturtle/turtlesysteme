REM Triangles

MOVEXY(-100, 150)
PROCtriangle(256)
END

DEF PROCtriangle(size%)
  IF size% >= 2 THEN
    FORWARD(size%)
    PROCtriangle(size% / 2)
    RIGHT(120)
    FORWARD(size%)
    PROCtriangle(size% / 2)
    RIGHT(120)
    FORWARD(size%)
    PROCtriangle(size% / 2)
    RIGHT(120)
  ENDIF
ENDPROC
