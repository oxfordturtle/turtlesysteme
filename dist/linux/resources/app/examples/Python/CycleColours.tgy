# CycleColours

def main():
  global turtc
  blank(black)
  colinc=randint(0, 4)
  colcode=randint(1, 20)
  colour(rgb(colcode))
  length = 0
  thickness(16)
  while not(length > 250):
    colcode=(colcode + colinc) % 20 + 1
    colour(rgb(colcode))
    length = length + 1
    forward(length)
    right(30)
